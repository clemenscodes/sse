{
    "name": "server",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/notes/server/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "target": "node",
                "compiler": "tsc",
                "outputPath": "dist/apps/notes/server",
                "main": "apps/notes/server/src/main.ts",
                "tsConfig": "apps/notes/server/tsconfig.app.json",
                "assets": ["apps/notes/server/src/assets"],
                "isolatedConfig": true,
                "generatePackageJson": true,
                "webpackConfig": "apps/notes/server/webpack.config.js"
            },
            "configurations": {
                "development": {},
                "production": {}
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "server:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "server:build:development"
                },
                "production": {
                    "buildTarget": "server:build:production"
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/notes/server/**/*.ts"]
            }
        },
        "test": {
            "dependsOn": ["build"],
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/notes/server/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "docker": {
            "dependsOn": ["build"],
            "executor": "@nx-tools/nx-container:build",
            "options": {
                "engine": "docker"
            },
            "defaultConfiguration": "development",
            "configurations": {
                "development": {
                    "file": "apps/notes/server/docker/Dockerfile.development",
                    "load": true,
                    "metadata": {
                        "images": ["server-dev"],
                        "tags": ["type=schedule", "type=sha", "latest"]
                    }
                },
                "ci": {
                    "file": "apps/notes/server/docker/Dockerfile.production",
                    "load": true,
                    "metadata": {
                        "images": ["server"],
                        "tags": ["type=schedule", "type=sha", "latest"]
                    }
                }
            }
        }
    },
    "implicitDependencies": ["server"],
    "tags": []
}
