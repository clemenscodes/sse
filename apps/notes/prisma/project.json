{
    "name": "prisma",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/notes/prisma",
    "projectType": "application",
    "targets": {
        "generation": {
            "executor": "nx:run-commands",
            "options": {
                "command": "PRISMA_DISABLE_WARNINGS=1 yarn prisma generate --schema=apps/notes/prisma/schema.prisma"
            }
        },
        "migration": {
            "dependsOn": ["generation"],
            "executor": "nx:run-commands",
            "options": {
                "command": "PRISMA_DISABLE_WARNINGS=1 yarn prisma migrate dev --schema=apps/notes/prisma/schema.prisma --skip-generate"
            }
        },
        "seed": {
            "dependsOn": ["migration"],
            "executor": "nx:run-commands",
            "options": {
                "command": "PRISMA_DISABLE_WARNINGS=1 yarn ts-node apps/notes/server/seed.ts"
            }
        },
        "status": {
            "executor": "nx:run-commands",
            "options": {
                "command": "PRISMA_DISABLE_WARNINGS=1 yarn prisma migrate status --schema=apps/notes/prisma/schema.prisma"
            }
        },
        "studio": {
            "executor": "nx:run-commands",
            "options": {
                "command": "PRISMA_DISABLE_WARNINGS=1 yarn prisma studio --schema=apps/notes/server/schema.prisma"
            }
        },
        "start": {
            "dependsOn": ["image"],
            "command": "docker run --rm -d -p 4444:4444/tcp prisma:latest"
        },
        "image": {
            "command": "INPUT_TAGS=latest yarn nx docker prisma"
        },
        "docker": {
            "executor": "@nx-tools/nx-container:build",
            "defaultConfiguration": "development",
            "configurations": {
                "development": {
                    "engine": "docker",
                    "file": "apps/notes/prisma/docker/development/Dockerfile",
                    "load": true,
                    "metadata": {
                        "images": ["dev-prisma"]
                    }
                },
                "production": {
                    "engine": "docker",
                    "file": "apps/notes/prisma/docker/production/Dockerfile",
                    "load": true,
                    "metadata": {
                        "images": ["prisma"]
                    }
                }
            }
        }
    }
}
