{
    "name": "sanitizer",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/sanitizer",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/next:build",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "root": "apps/sanitizer",
                "outputPath": "dist/apps/sanitizer"
            },
            "configurations": {
                "development": {
                    "outputPath": "apps/sanitizer"
                },
                "production": {}
            }
        },
        "serve": {
            "executor": "@nx/next:server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "sanitizer:build",
                "dev": true
            },
            "configurations": {
                "development": {
                    "buildTarget": "sanitizer:build:development",
                    "dev": true
                },
                "production": {
                    "buildTarget": "sanitizer:build:production",
                    "dev": false
                }
            }
        },
        "export": {
            "executor": "@nx/next:export",
            "options": {
                "buildTarget": "sanitizer:build:production"
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/sanitizer/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/sanitizer/**/*.{ts,tsx,js,jsx}"]
            }
        }
    },
    "tags": []
}
